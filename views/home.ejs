<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog app</title>

    <%- include('./partials/head') %>
    <style>
      body.dark-theme {
          background-color: #121212;
          color: #ffffff;
      }
  
      body.light-theme {
          background-color: #ffffff;
          color: #000000;
      }
  
      /* .card {
          background-color: #1e1e1e;
          border: none;
          border-radius: 10px;
          margin-bottom: 20px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      } */
  
      body.light-theme .card {
          background-color: #ffffff;
          color: #000000;
      }
  
      /* .card-body {
          background-color: #2c2c2c;
          border-radius: 10px;
          padding: 30px;
      } */
  
      body.light-theme .card-body {
          background-color: #f8f9fa;
      }
  
      h1, h5 {
          color: #ffffff;
      }
  
      body.light-theme h1, body.light-theme h5 {
          color: #000000;
      }
  
      .profile {
          display: flex;
          align-items: center;
          margin-top: 20px;
          background-color: #1e1e1e;
          padding: 10px;
          border-radius: 10px;
      }
  
      body.light-theme .profile {
          background-color: #f8f9fa;
      }
  
      .profile img {
          border-radius: 50%;
          margin-right: 15px;
      }
  
      .profile h5 {
          margin: 0;
      }
  
      .content-section {
          margin-bottom: 30px;
      }
  
      .content-section p {
          margin-bottom: 1.5rem;
      }
  </style>
  
</head>
<body>
    <%- include('./partials/script') %>
    
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
          <% blogs.forEach(blog => { %>
              <div class="col">
                  <div class="card h-100" style="width: 100%;">
                      <img src="<%= blog.imageurl %>" class="card-img-top" alt="Blog Image">
                      <div class="card-body d-flex flex-column">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blogs/<%= blog._id %>" class="btn btn-primary mt-auto">Read blog</a>
                      </div>
                  </div>
              </div>
          <% }); %>
      </div>
  </div>
  
    
</body>
</html>